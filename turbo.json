{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json", "**/.env.*local"],
  "globalPassThroughEnv": ["NODE_ENV", "PORT"],
  "pipeline": {
    "build": {
      "env": ["HOST", "PORT"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**/*"]
    },
    "web#build": {
      "env": [
        "VERCEL",
        "VERCEL_URL",
        "RENDER",
        "RENDER_INTERNAL_HOSTNAME",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_PORT"
      ],
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["lint:prettier", "^build"]
    },
    "lint:prettier": {
      "inputs": ["*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
